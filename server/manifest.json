{
  "manifest_version": 2,
  "name": "Wizkers",
  "description": "Extend the reach of your devices",
  "version": "0.6",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "serial",
    "storage",
    "unlimitedStorage",
    "audioCapture"
  ],
  "sandbox": {
    "pages": [ "public/tpl/HomeView.html" ]
  }
}
