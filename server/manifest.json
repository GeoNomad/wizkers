{
  "manifest_version": 2,
  "name": "Wizkers",
  "description": "Extend the reach of your devices",
  "version": "0.7.0",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "serial",
    "storage",
    "unlimitedStorage",
    "audioCapture",
    "http://*/*",
    "https://*/*"
  ],
  "sockets": {
      "tcpServer": {
        "listen": ":4532"
      }
  },
  "sandbox": {
    "pages": [ "public/tpl/HomeView.html" ]
  }
}
