{
    "manifest_version": 2,
    "name": "Wizkers",
    "description": "Extend the reach of your devices",
    "version": "0.8.1",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
    "serial",
    "storage",
    "unlimitedStorage",
    "audioCapture",
    "fileSystem",
    "http://*/*",
    "https://*/*"
  ],
    "sockets": {
        "tcpServer": {
            "listen": ":4532"
        }
    },
    "sandbox": {
        "pages": ["public/tpl/HomeView.html"]
    }
}